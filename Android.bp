local_src_files = [
    "JNIHelp.cpp",
    "JniConstants.cpp",
    "toStringArray.cpp",
]

//
// Build for the host and target (device).
//

cc_library_shared {
    srcs: local_src_files + ["JniInvocation.cpp"],
    tags: ["optional"],
    name: "libnativehelper",
    host_supported: true,
    clang: true,
    cflags: [
        "-Werror",
        "-fvisibility=protected",
    ],
    local_include_dirs: ["include/nativehelper"],
    target: {
        android: {
            shared_libs: [
                "liblog",
                "libcutils",
                "libdl",
            ],
        },
        host: {
            shared_libs: [
                "liblog",
            ],
            host_ldlibs: ["-ldl"],
        },
    },
}

//
// NDK-only build for the target (device), using libc++.
// - Relies only on NDK exposed functionality.
// - This doesn't include JniInvocation.
//

cc_library_shared {
    tags: ["optional"],
    name: "libnativehelper_compat_libc++",
    clang: true,
    local_include_dirs: ["include/nativehelper"],
    export_include_dirs: ["include/nativehelper"],
    cflags: ["-Werror"],
    srcs: local_src_files,
    shared_libs: [
        "liblog",
        "libdl",
    ],
    // ANDROIDMK TRANSLATION ERROR: unsupported assignment to LOCAL_SDK_VERSION
    // LOCAL_SDK_VERSION:=19
    // ANDROIDMK TRANSLATION ERROR: unsupported assignment to LOCAL_NDK_STL_VARIANT
    // LOCAL_NDK_STL_VARIANT:=c++_static

}

//
// Tests.
//

subdirs = ["tests"]
